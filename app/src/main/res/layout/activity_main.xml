<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_main_btn01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="打开Dokit工具面板"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/btn_main_btn02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/main_btn_margin_top"
        android:text="显示Dokit入口"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_main_btn03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/main_btn_margin_top"
        android:text="Fps测试"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/btn_main_btn04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/main_btn_margin_top"
        android:text="ANR测试"
        android:textAllCaps="false"
        />
    <Button
        android:id="@+id/btn_main_btn05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/main_btn_margin_top"
        android:text="Crash测试"
        android:textAllCaps="false"
        />
</LinearLayout>